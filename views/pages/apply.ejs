<%- include('../partials/pages/header', {title: "Application for Electrico Solar"}); %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">

          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Application for Electrico Solar</h1>
          </div><!-- /.col -->

          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Electrico Solar</li>
            </ol>
          </div><!-- /.col -->
          
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <h5 class="m-0">Application for Electrico Solar</h5>
              </div>
              <div class="card-body">
                  <form method="POST" action="" enctype="multipart/form-data"> 
                    <div class="form-group">
                      <label for="title">Name</label>
                      <input type="text" class="form-control" id="title" name="title" placeholder="Salami Haruna" required>
                    </div>

                    <div class="form-group">
                      <label for="title">Phone number</label>
                      <input type="text" class="form-control" id="title" name="title" placeholder="08089877667" required>
                    </div>

                    <div class="form-group">
                      <label for="title">Occupation</label>
                      <input type="text" class="form-control" id="title" name="title" placeholder="Software Developer" required>
                    </div>

                    <div class="form-group">
                      <label for="title">Address</label>
                      <input type="text" class="form-control" id="location" name="location" placeholder="No 5. Akure street" required>
                    </div>

                    <div class="form-group">
                      <label for="category">Building Type</label>
                      <select class="custom-select" id="category" name="category" required>
                        <option value="">Single room</option>
                        <option value="">Self contain</option>
                        <option value="">2 Bedroom flat</option>
                      </select>
                    </div>
    
                    <div class="form-group">
                      <label for="category">Monthly Income</label>
                      <select class="custom-select" id="category" name="category" required>
                        <option value="">10k - 50k</option>
                        <option value="">50k - 200k</option>
                        <option value="">200k - 1M</option>
                      </select>
                    </div>

                    <div class="form-group">
                      <label for="image">Bank Statement</label>
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" name="image" id="image">
                        <label class="custom-file-label" for="image">Choose file</label>
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="title">Describe your need</label>
                      <div class="mb-3">
                        <textarea name="content" class="textarea" placeholder="Write the content of your article here"
                          style="width: 100%; height: 500px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" required>
                        </textarea>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Application</button>
                  </form>
              </div>
            </div>
          </div>
          <!-- /.col-md-6 -->
          
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
<%- include('../partials/pages/footer'); %>
